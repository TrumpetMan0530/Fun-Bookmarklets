javascript:window.addEventListener('click',function(event){event.target.style.position='absolute';event.target.style.top=Math.floor(Math.random()*window.innerHeight)+'px';event.target.style.left=Math.floor(Math.random()*window.innerWidth)+'px';event.target.style.width=Math.floor(Math.random()*window.innerWidth)+'px';event.target.style.height=Math.floor(Math.random()*window.innerHeight)+'px';event.target.style.background='rgb('+Math.floor(Math.random()*256)+','+Math.floor(Math.random()*256)+','+Math.floor(Math.random()*256)+')';event.target.style.transform='rotate('+Math.floor(Math.random()*360)+'deg)';});(function(){document.body.style.cursor='crosshair';})();
